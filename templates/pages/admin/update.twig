<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CESI - Connexion</title>
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/login.css">
</head>
<body class="text-center">
<main class="form-signin">
    <form method="POST" action="{{ path_for("app.admin.user.update.submit", {id: user.id}) }}">
        <img class="mb-4" src="{{ base_url() }}/assets/images/logo.png" width="300" height="180">
        {% include 'layouts/flash.twig' %}
        <h1 class="h3 mb-3 fw-normal">Inscription</h1>
        <label for="inputEmail" class="visually-hidden">Adresse e-mail</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Adresse mail" name="email" value="{{ user.email }}" autofocus>

        <label for="inputLastname" class="visually-hidden">Nom d'utilisateur</label>
        <input type="text" id="inputLastname" class="form-control" placeholder="Nom d'utilisateur" name="username" value="{{ user.username }}">

        <label for="inputLastname" class="visually-hidden">Nom</label>
        <input type="text" id="inputLastname" class="form-control" placeholder="Nom" name="lastname" value="{{ user.lastname }}">

        <label for="inputFirstname" class="visually-hidden">Prénom</label>
        <input type="text" id="inputFirstname" class="form-control" placeholder="Prénom" name="firstname" value="{{ user.firstname }}">

        <label for="inputAddress" class="visually-hidden">Adresse</label>
        <input type="text" id="inputAddress" class="form-control" placeholder="Adresse" name="address" value="{{ user.address }}">

        <button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>
    </form>
</main>

<script src="https://cdn.jsdelivr.net/npm/places.js@1.19.0"></script>
<script>
    let placesAutocomplete = places({
        container: document.querySelector('#inputAddress')
    });
</script>
</body>
</html>
